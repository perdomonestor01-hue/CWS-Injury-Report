        showLoadingState('Stopping all agents...');

        const response = await fetch('/api/agents/stop-all', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const result = await response.json();

        if (result.success) {
            showNotification(`Stopped ${result.stoppedAgents.length} agents`, 'success');
            await refreshAgentStatus();
        } else {
            throw new Error(result.message || 'Failed to stop agents');
        }
    } catch (error) {
        console.error('Agent stop error:', error);
        showNotification(`Error: ${error.message}`, 'error');
    }
}

async function stopAgent(agentId) {
    try {
        const response = await fetch(`/api/agents/stop/${agentId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const result = await response.json();

        if (result.success) {
            showNotification(`Agent stopped successfully`, 'success');
            await refreshAgentStatus();
        } else {
            throw new Error(result.message || 'Failed to stop agent');
        }
    } catch (error) {
        console.error('Agent stop error:', error);
        showNotification(`Error: ${error.message}`, 'error');
    }
}

async function refreshAgentStatus() {
    try {
        const response = await fetch('/api/agents/status');
        const result = await response.json();

        if (result.success) {
            updateAgentStatusDisplay(result.status);
        } else {
            throw new Error('Failed to fetch agent status');
        }
    } catch (error) {
        console.error('Error fetching agent status:', error);
        document.getElementById('agent-status-text').textContent = 'Error';
        document.getElementById('agent-status-indicator').className = 'w-3 h-3 bg-red-400 rounded-full';
    }
}

function updateAgentStatusDisplay(status) {
    const statusIndicator = document.getElementById('agent-status-indicator');
    const statusText = document.getElementById('agent-status-text');
    const agentsList = document.getElementById('active-agents-list');

    // Update status indicator
    if (status.totalAgents > 0) {
        statusIndicator.className = 'w-3 h-3 bg-green-400 rounded-full animate-pulse';
        statusText.textContent = `${status.totalAgents} Active`;
    } else {
        statusIndicator.className = 'w-3 h-3 bg-gray-400 rounded-full';
        statusText.textContent = 'No Agents';
    }

    // Update agents list
    if (status.activeAgents.length === 0) {
        agentsList.innerHTML = '<p class="text-sm opacity-75">No agents currently active</p>';
    } else {
        agentsList.innerHTML = status.activeAgents.map(agent => `
            <div class="flex items-center justify-between bg-white bg-opacity-10 rounded p-3">
                <div>
                    <div class="font-medium text-sm">${agent.name}</div>
                    <div class="text-xs opacity-75">
                        ${agent.status} â€¢ ${agent.tasksInProgress} tasks â€¢
                        ${formatUptime(agent.uptime)}
                    </div>
                </div>
                <button onclick="stopAgent('${agent.agentId}')"
                        class="text-red-300 hover:text-red-100 text-sm">
                    <i class="fas fa-stop"></i>
                </button>
            </div>
        `).join('');
    }
}

function formatUptime(uptime) {
    const seconds = Math.floor(uptime / 1000);
    const minutes = Math.floor(seconds / 60);
    const hours = Math.floor(minutes / 60);

    if (hours > 0) {
        return `${hours}h ${minutes % 60}m`;
    } else if (minutes > 0) {
        return `${minutes}m ${seconds % 60}s`;
    } else {
        return `${seconds}s`;
    }
}

function showLoadingState(message) {
    showNotification(message, 'info');
}

// Auto-refresh agent status every 30 seconds
setInterval(refreshAgentStatus, 30000);

// Initial agent status load
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(refreshAgentStatus, 1000);
});
